        xmlns:local="clr-namespace:StudyGuideApp"
        mc:Ignorable="d"
        Title="Study Guide Pro" Height="435" Width="695" ResizeMode="NoResize" WindowStartupLocation="CenterScreen">
    <Grid>
        <!-- Setting Background-->
        <Grid.Background>
            <ImageBrush x:Name="backgroundImg" ImageSource="C:\Users\lab_services_student\Documents\GitHub\Semester-StudyGuide-Generator_WPF\StudyGuideApp\Images\wp1.jpg" ></ImageBrush>
        </Grid.Background>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="31"/>
        </Grid.ColumnDefinitions>

        <!-- labels and buttons-->
        <Label x:Name="label" Content="WECLOME TO THE STUDY GUIDE APP" FontSize="20" FontWeight="Bold" Foreground="White" HorizontalAlignment="Center"  Margin="0,152,0,0" VerticalAlignment="Top"/>
        <Button x:Name="beginButton" Content="BEGIN" FontSize="20" FontWeight="Light" Foreground="Brown" Background="Wheat" HorizontalAlignment="Left" Margin="296,256,0,0" VerticalAlignment="Top" Click="beginButton_Click" Height="31" Width="104"/>
