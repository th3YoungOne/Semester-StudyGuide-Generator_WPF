        <Button x:Name="exitButton" Content="EXIT" FontSize="20" FontWeight="Light" Foreground="Brown" Background="Wheat" HorizontalAlignment="Left" Margin="10,24,0,0" VerticalAlignment="Top" Click="exitButton_Click" Height="31" Width="104"/>
    </Grid>
</Window>
